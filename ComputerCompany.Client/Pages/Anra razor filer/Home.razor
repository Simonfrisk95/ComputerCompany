@page "/"
@inject ProductApi productApi
@using ShoeCompany.Client.Services
@using ShoeCompany.Shared.DTO
@using ShoeCompany.Client.components
@rendermode InteractiveWebAssembly

@attribute [Authorize]

<script type="text/javascript">
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
        var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
        s1.async=true;
        s1.src='https://embed.tawk.to/66c72e9fea492f34bc08ed87/1i5t0s8ee';
        s1.charset='UTF-8';
        s1.setAttribute('crossorigin','*');
        s0.parentNode.insertBefore(s1,s0);
    })();
</script>

<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3"><strong>Shoes</strong> Dashboard</h1>

        <!-- Dashboard cards -->
        <div class="row">
            <div class="col-xl-6 col-xxl-5 d-flex">
                <div class="w-100">
                    <div class="row">
                        <!-- Products card -->
                        <div class="col-sm-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title">Products</h5>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <i class="align-middle" data-feather="box"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <h1 class="mt-1 mb-3">@TotalProducts</h1>
                                    <div class="mb-0">
                                        <span class="text-danger">
                                            <i class="mdi mdi-arrow-bottom-right"></i> @ProductsChange
                                        </span>
                                        <span class="text-muted">Since last week</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Inbound card -->
                            <div class="card" style="margin-top: 10px;">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title">Inbound Delivery</h5>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <i class="align-middle" data-feather="truck"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <h1 class="mt-1 mb-3">@TotalInbound</h1>
                                    <div class="mb-0">
                                        <span class="text-success">
                                            <i class="mdi mdi-arrow-bottom-right"></i> @InboundChange%
                                        </span>
                                        <span class="text-muted">Since last week</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Orders card -->
                        <div class="col-sm-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title">Orders</h5>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <i class="align-middle" data-feather="shopping-cart"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <h1 class="mt-1 mb-3">@TotalOrders</h1>
                                    <div class="mb-0">
                                        <span class="text-success">
                                            <i class="mdi mdi-arrow-bottom-right"></i> @OrdersChange%
                                        </span>
                                        <span class="text-muted">Since last week</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent movement placeholder -->
            <div class="col-xl-6 col-xxl-7">
                <RecentMovement />
            </div>
        </div>

        <!-- Product list -->
        <div class="row mt-4">
            <div class="col-12 col-lg-8 col-xxl-9 d-flex">
                <div class="card flex-fill">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Latest Products</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover my-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>SKU</th>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Products == null || !Products.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-danger">No products found.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var product in Products.Take(10))
                                    {
                                        <tr class="@((product.Quantity ?? 0) < 5 ? "table-warning" : "table-light")">
                                            <td>@product.SKU</td>
                                            <td>@product.Name</td>
                                            <td>@product.Quantity</td>
                                            <td>@product.Location</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Calendar placeholder -->
            <div class="col-12 col-md-6 col-xxl-3 d-flex order-1 order-xxl-1">
                <DashboardCalender />
            </div>
        </div>
    </div>
</main>

@code {
    private List<ProductDto> Products = new();
    private List<OrderDto> Orders = new();

    private int TotalProducts => Products.Count;
    private int TotalQuantity => Products.Sum(p => p.Quantity ?? 0); // if you want total stock
    private int TotalInbound => 140; 
    private int TotalOrders => 150; 

    private int ProductsChange => 2000;
    private int InboundChange => 5;
    private int OrdersChange => 6;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }
    
    // Load products from the API
    private async Task LoadProducts()
    {
        var result = await productApi.GetPagedAsync(0, 100);
        if (result != null)
        {
            Products = result.Items.ToList();
        }
    }
}
