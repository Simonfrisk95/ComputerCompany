@using ShoeCompany.Shared.DTO

@if (IsOpen)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="Product" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-floating mb-3">
                            <InputText class="form-control" id="skuInput" @bind-Value="Product.SKU"
                                placeholder="SKU (Ex. SHOE-BLACK-40-P00010)" />
                            <label for="skuInput">SKU (Ex. SHOE-BLACK-40-P00010)</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputText class="form-control" id="nameInput" @bind-Value="Product.Name" placeholder="Name" />
                            <label for="nameInput">Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputNumber class="form-control" id="quantityInput" @bind-Value="Product.Quantity"
                                placeholder="Quantity" />
                            <label for="quantityInput">Quantity</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputText class="form-control" id="locationInput" @bind-Value="Product.Location"
                                placeholder="Location" />
                            <label for="locationInput">Location</label>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Create Product";
    [Parameter] public ProductDto Product { get; set; } = new();
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<ProductDto> OnSubmit { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    // Handle form submission
    private async Task HandleSubmit() => await OnSubmit.InvokeAsync(Product);
    private async Task Close() => await OnClose.InvokeAsync();
}